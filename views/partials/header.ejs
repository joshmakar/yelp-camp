<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CampFinder - Find amazing campgrounds from around the world!</title>

    <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/00aef0d8f3.js"></script>

  <!-- App CSS (Contains Bootstrap) -->
  <link rel="stylesheet" href="/css/app.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/campgrounds">CampFinder</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>">
            <a class="nav-link" href="/campgrounds">Home <span class="sr-only">(current)</span></a>
          </li>
          <% if(typeof currentUser === 'undefined'){ %>
            <li class="nav-item <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>">
              <a class="nav-link" href="/login">Log In</a>
            </li>
            <li class="nav-item <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>">
              <a class="nav-link" href="/register">Sign Up</a>
            </li>
          <% } else { %>
            <li class="navbar-text">
              <% if (currentUser.isAdmin) { %>
                <i class="fas fa-user-astronaut"></i>
              <% } else { %>
                <i class="fas fa-user"></i>
              <% } %>
                <%= currentUser.username %>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Log Out</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>