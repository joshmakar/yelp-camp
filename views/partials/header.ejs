<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Yelp Camp</title>

  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/00aef0d8f3.js"></script>

  <!-- App CSS -->
  <link rel="stylesheet" href="/css/app.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/campgrounds">YelpCamp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>">
            <a class="nav-link" href="/campgrounds">Home <span class="sr-only">(current)</span></a>
          </li>
          <% if(typeof currentUser === 'undefined'){ %>
            <li class="nav-item <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>">
              <a class="nav-link" href="/login">Log In</a>
            </li>
            <li class="nav-item <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>">
              <a class="nav-link" href="/register">Sign Up</a>
            </li>
          <% } else { %>
            <li class="navbar-text">
              <% if (currentUser.isAdmin) { %>
                <i class="fas fa-user-astronaut"></i>
              <% } else { %>
                <i class="fas fa-user"></i>
              <% } %>
                <%= currentUser.username %>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Log Out</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <% if (error && error[0]) { %>
      <div class="alert alert-danger" role="alert"><%- error %></div>
    <% } %>
    <% if (info && info[0]) { %>
      <div class="alert alert-info" role="alert"><%- info %></div>
    <% } %>
    <% if (success && success[0]) { %>
      <div class="alert alert-success" role="alert"><%- success %></div>
    <% } %>
  </div>

  <div class="container">

  <!-- div.container closed in footer -->