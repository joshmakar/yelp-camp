<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CampFinder - Find amazing campgrounds from around the world!</title>
  
  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/00aef0d8f3.js"></script>
  
  <!-- App CSS (Contains Bootstrap) -->
  <link rel="stylesheet" href="/css/app.css">
  
  <!-- Icons -->
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#4a4238">
  <meta name="msapplication-TileColor" content="#4a4238">
  <meta name="theme-color" content="#4a4238">

  <!-- Optimizations -->
  <link href="https://res.cloudinary.com" rel="preconnect" crossorigin>

</head>
<body>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/campgrounds"><i class="fas fa-map-signs"></i> CampFinder</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>">
            <a class="nav-link" href="/campgrounds">Home <span class="sr-only">(current)</span></a>
          </li>
          <% if(typeof currentUser === 'undefined'){ %>
            <li class="nav-item <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>">
              <a class="nav-link" href="/login">Log In</a>
            </li>
            <li class="nav-item <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>">
              <a class="nav-link" href="/register">Sign Up</a>
            </li>
          <% } else { %>
            <li class="navbar-text">
              <a href="/users/<%= currentUser._id %>">
              <% if (currentUser.isAdmin) { %>
                <i class="fas fa-user-astronaut"></i>
              <% } else { %>
                <i class="fas fa-user"></i>
              <% } %>
                <%= currentUser.username %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Log Out</a>
            </li>
          <% } %>
        </ul>
      </div>
      <form class="form-inline d-none d-md-block" action="/campgrounds" method="GET">
        <input class="form-control" type="search" placeholder="Search" aria-label="Search" name="search">
        <button class="btn btn-outline-primary" type="submit"><i class="fas fa-search"></i></button>
      </form>
    </div>
  </nav>