<% include ../partials/wrapper_head_default %>

<div class="row justify-content-center">
  <div class="col-auto bg-light p-4 m-4 m-md-0">
    <h1>Add New Comment to: <%= campground.name %></h1>
    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
      <div class="form-group">
        <label for="comment_text">Comment</label>
        <input id="comment_text" class="form-control" name="comment[text]" type="text" placeholder="Comment" required>
      </div>
      <button type="submit" class="btn btn-primary btn-sm">Submit</button>
      <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </form>
    
  </div>
</div>

<% include ../partials/footer %>