<% include ../partials/wrapper_head_default %>

<div class="row justify-content-center">
  <div class="col-12 col-lg-6">
    <h1>Edit comment</h1>
    <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="comment_text">Comment</label>
        <input id="comment_text" class="form-control" name="comment[text]" type="text" value="<%= comment.text %>" required>
      </div>
      <button type="submit" class="btn btn-primary btn-sm">Submit</button>
      <a href="/campgrounds/<%= campground_id %>">Go Back</a>
    </form>
  </div>
</div>

<% include ../partials/footer %>