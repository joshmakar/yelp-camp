<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-3">
      <p class="lead">YelpCamp</p>
      <ul class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </ul>
    </div>
    <div class="col-9">
      <div class="card mb-2">
        <img class="card-img-top" src="<%= campground.image %>" alt="">
        <div class="caption-full">
          <span class="float-right pr-1">$9.00/night</span>
        </div>
        <div class="card-body pt-0">
          <h1 class="card-title"><a><%= campground.name %></a></h1>
          <p class="card-text"><%= campground.description %></p>
          <% if(typeof campground.author.username !== 'undefined') { %>
            <cite>Submitted by: <%= campground.author.username %></cite>
          <% } %>
          <hr>
          <span>*****</span>
          <span class="d-block float-right">4 reviews</span>
        </div>
      </div>
      <div class="card bg-light">
        <div class="card-header">
          Comments
        </div>
        <ul class="list-group list-group-flush">
          <% campground.comments.forEach(comment => { %>
              <li class="list-group-item bg-light">
                <strong><%= comment.author.username %></strong>
                <span class="float-right">10 days ago</span>
                <p><%= comment.text %></p>
              </li>
          <% });%>
        </ul>
        <div class="card-body">
          <a href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
        </div>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>